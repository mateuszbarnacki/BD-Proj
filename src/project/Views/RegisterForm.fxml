<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.Views.RegisterFormController"
            fx:id="borderPane">
    <left>
        <HBox prefWidth="40">
            <Label text="Powrót" onMouseClicked="#displayPreviousPage" style="-fx-font-size: 12px; -fx-text-fill: orange;"/>
        </HBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Rejestracja" textAlignment="CENTER" style="-fx-font-size: 32px; -fx-text-fill: orange;"/>
            <GridPane hgap="15" vgap="10" alignment="CENTER">
                <Label text="Nazwa użytkownika: " textAlignment="CENTER" style="-fx-font-size: 16px;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="userNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Login: " textAlignment="CENTER" style="-fx-font-size: 16px;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="loginField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Hasło: " textAlignment="CENTER" style="-fx-font-size: 16px;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Powtórz hasło: " textAlignment="CENTER" style="-fx-font-size: 16px;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <PasswordField fx:id="secPasswordField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>
            <Button text="Zatwierdź" minWidth="120" minHeight="40" style="-fx-background-radius: 30px;" onAction="#addAccount"/>
        </VBox>
    </center>
    <right>
        <HBox prefWidth="40"/>
    </right>
</BorderPane>
