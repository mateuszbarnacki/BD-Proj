<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.CommodityBrowserController" fx:id="borderPane">
    <left>
        <HBox prefWidth="40">
            <Label text="Powrót" textAlignment="CENTER" onMouseClicked="#displayPreviousPage" style="-fx-font-size: 10px; -fx-text-fill: orange;"/>
        </HBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="25">
            <padding><Insets bottom="40" /></padding>
            <Label text="Wyszukiwarka produktów" textAlignment="CENTER" style="-fx-font-size: 32px; -fx-text-fill: orange;"/>
            <VBox alignment="CENTER" prefWidth="400" spacing="15">
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Dział " textAlignment="CENTER" style="-fx-font-size: 16px;"/>
                    <ComboBox fx:id="departmentsList"/>
                </HBox>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Cena" textAlignment="CENTER" style="-fx-font-size: 16px;"/>
                    <fx:define>
                        <ToggleGroup fx:id="priceToggleGroup"/>
                    </fx:define>
                    <RadioButton fx:id="minButton" text="minimalna" textAlignment="CENTER" onAction="#showHBox" toggleGroup="$priceToggleGroup"/>
                    <RadioButton fx:id="maxButton" text="maksymalna" textAlignment="CENTER" onAction="#showHBox" toggleGroup="$priceToggleGroup"/>
                    <RadioButton fx:id="otherButton" text="zakres" textAlignment="CENTER" onAction="#showHBox" toggleGroup="$priceToggleGroup"/>
                    <HBox fx:id="hBox" spacing="10" alignment="CENTER">
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Od: " textAlignment="CENTER"/>
                            <TextField fx:id="minValue" prefWidth="50"/>
                        </HBox>
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Do: " textAlignment="CENTER"/>
                            <TextField fx:id="maxValue" prefWidth="50"/>
                        </HBox>
                    </HBox>
                    <VBox alignment="CENTER">
                        <padding><Insets top="15"/></padding>
                        <Button text="Szukaj" textAlignment="CENTER" onAction="#processResult" minWidth="100" minHeight="25" style="-fx-background-radius: 30px;"/>
                    </VBox>
                </VBox>
            </VBox>

            <TableView fx:id="resultTable" prefWidth="400" style="-fx-font-size: 14px;">
                <columns>
                    <TableColumn text="Nazwa" prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Cena" prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="price"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>
    <right>
        <HBox prefWidth="40"/>
    </right>
</BorderPane>
