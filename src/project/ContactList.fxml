<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<GridPane fx:controller="project.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <MenuBar>
        <menus>
            <Menu text="Dodaj" onAction="#addAccount"></Menu>
        </menus>
    </MenuBar>
    <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER" spacing="40">
        <padding><Insets left="10" right="10" /></padding>
        <Label text="Symulator hurtowni mebli" textAlignment="CENTER" style="-fx-font-size: 24px; -fx-text-fill: orange;"/>
        <Label wrapText="true">W aplikacji można utworzyć do pięciu kąt. Nazwa użytkownika musi być unikalna dla każdego konta.</Label>
    </VBox>
    <BorderPane GridPane.rowIndex="2" GridPane.columnIndex="0">
        <padding><Insets left="10" right="10"/></padding>
        <center>
            <ListView>
                <cellFactory>
                    <PropertyValueFactory>
                    </PropertyValueFactory>
                </cellFactory>
            </ListView>
        </center>
    </BorderPane>
</GridPane>