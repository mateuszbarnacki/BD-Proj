            </Menu>
            <Menu text="Baza">
                <items>
                    <MenuItem text="Działy" onAction="#printDepartments"/>
                    <MenuItem text="Kierownicy" onAction="#printManagers"/>
                    <MenuItem text="Pracownicy" onAction="#printWorkers"/>
                    <MenuItem text="Projektanci" onAction="#printDesigners"/>
                    <MenuItem text="Obowiązki" onAction="#printDuties"/>
                    <MenuItem text="Plany urlopowe" onAction="#printVacations"/>
                    <MenuItem text="Ekspozycje" onAction="#printExpositions"/>
                    <MenuItem text="Towary" onAction="#printCommodities"/>
                    <MenuItem text="Opinie" onAction="#printOpinions"/>
                    <MenuItem text="Portfolio" onAction="#printPortfolios"/>
                </items>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
