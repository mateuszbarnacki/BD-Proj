<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.Views.OpinionWindowController" fx:id="borderPane">
    <left>
        <HBox prefWidth="40">
            <Label text="Powrót" onMouseClicked="#displayPreviousPage" style="-fx-font-size: 12px; -fx-text-fill: orange;"/>
        </HBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="10" prefWidth="400">
            <Label text="Opinie" textAlignment="CENTER" style="-fx-font-size: 32px; -fx-text-fill: orange;"/>
            <ListView fx:id="opinionsList" onMouseClicked="#showOptions" prefWidth="400" style="-fx-font-size: 14px;">
            </ListView>
            <Button fx:id="addOpinionButton" text="Dodaj" textAlignment="CENTER" minWidth="120" minHeight="30" onAction="#addOpinion" style="-fx-background-radius: 30px;"/>
            <Button fx:id="deleteOpinionButton" text="Usuń" textAlignment="CENTER" minWidth="120" minHeight="30" onAction="#deleteOpinion" style="-fx-background-radius: 30px;"/>
        </VBox>
    </center>
    <right>
        <HBox prefWidth="40"/>
    </right>
</BorderPane>
