<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.VacationWindowController" fx:id="borderPane">
    <left>
        <HBox prefWidth="40">
            <Label text="Powrót" onMouseClicked="#displayPreviousPage" style="-fx-font-size: 12px; -fx-text-fill: orange;"/>
        </HBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="10" prefWidth="400">
            <Label text="Rozpiska urlopu" textAlignment="CENTER" style="-fx-font-size: 32px; -fx-text-fill: orange;"/>
            <TableView fx:id="vacationsList" onMouseClicked="#showOptions" style="-fx-font-size: 14px;">
                <columns>
                    <TableColumn text="Data rozpoczecia" prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="beginning"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Data zakonczenia" prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="end"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <Button fx:id="addVacationButton" text="Dodaj urlop" textAlignment="CENTER" minWidth="120" minHeight="30" onAction="#addVacation" style="-fx-background-radius: 30px;"/>
            <Button fx:id="deleteVacationButton" text="Usuń urlop" textAlignment="CENTER" minWidth="120" minHeight="30" onAction="#deleteVacation" style="-fx-background-radius: 30px;"/>
        </VBox>
    </center>
    <right>
        <HBox prefWidth="40"/>
    </right>
</BorderPane>
