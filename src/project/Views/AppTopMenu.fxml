<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project.Views.AppTopMenuController" fx:id="borderPane">
    <top>
        <MenuBar>
            <Menu text="Opcje">
                <items>
                    <MenuItem text="Wyloguj" onAction="#logout"/>
                    <MenuItem text="Zamknij" onAction="#close"/>
